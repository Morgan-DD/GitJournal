<UserControl x:Class="GitJournal.UserControl_InfosPopup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitJournal"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#24292E">
        <StackPanel x:Name="StackPanel_Title" HorizontalAlignment="Center" Height="57" Margin="0,10,0,0" VerticalAlignment="Top" Width="780" Orientation="Horizontal">
            <Label x:Name="Label_Title" Content="Titre" Foreground="White" FontSize="18" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="100"/>
            <TextBox x:Name="TextBox_Title" Width="622" Height="27" Background="#FF637687" BorderThickness="0" VerticalAlignment="Center" VerticalContentAlignment="Center" Foreground="White"/>
        </StackPanel>
        <StackPanel x:Name="StackPanel_Text" HorizontalAlignment="Center" Height="90" Margin="0,67,0,0" VerticalAlignment="Top" Width="780" Orientation="Horizontal">
            <Label x:Name="Label_Content" Content="Text" Foreground="White" FontSize="18" VerticalAlignment="Top" VerticalContentAlignment="Center" Width="100"/>
            <TextBox x:Name="TextBox_Content" Width="622" Height="74" Background="#FF637687" BorderThickness="0" VerticalContentAlignment="Top" TextWrapping="Wrap" AcceptsReturn="True" VerticalAlignment="Top" Margin="0,10,0,0" Foreground="White"/>
        </StackPanel>
        <StackPanel x:Name="StackPanel_User" HorizontalAlignment="Center" Height="57" Margin="0,157,0,0" VerticalAlignment="Top" Width="780" Orientation="Horizontal">
            <Label x:Name="Label_User" Content="Personne" Foreground="White" FontSize="18" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="100"/>
            <TextBox x:Name="TextBox_User" Width="622" Height="27" Background="#FF637687" BorderThickness="0" VerticalAlignment="Center" VerticalContentAlignment="Center" Foreground="White"/>
        </StackPanel>
        <StackPanel x:Name="StackPanel_Status" HorizontalAlignment="Center" Height="57" Margin="0,219,0,0" VerticalAlignment="Top" Width="780" Orientation="Horizontal">
            <Label x:Name="Label_Status" Content="Status" Foreground="White" FontSize="18" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="100"/>
            <RadioButton Name="RadioButton_Done" FontSize="18" VerticalAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Margin="0,0,10,0">Done</RadioButton>
            <RadioButton Name="RadioButton_WIP" FontSize="18" VerticalAlignment="Center" VerticalContentAlignment="Center" Foreground="White">WIP</RadioButton>
        </StackPanel>
        <StackPanel x:Name="StackPanel_Duration" HorizontalAlignment="Center" Height="57" Margin="0,281,0,0" VerticalAlignment="Top" Width="780" Orientation="Horizontal">
            <Label x:Name="Label_Duration" Content="Durée" Foreground="White" FontSize="18" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="100"/>
            <TextBox x:Name="TextBox_Duration" Width="622" Height="27" Background="#FF637687" BorderThickness="0" VerticalAlignment="Center" VerticalContentAlignment="Center" Foreground="White"/>
        </StackPanel>
        <StackPanel x:Name="StackPanel_Date" HorizontalAlignment="Center" Height="57" Margin="0,338,0,0" VerticalAlignment="Top" Width="780" Orientation="Horizontal">
            <Label x:Name="Label_Date" Content="Date" Foreground="White" FontSize="18" VerticalAlignment="Center" VerticalContentAlignment="Center" Width="100"/>
            <DatePicker x:Name="TextBox_Date" Width="622" Height="27" Background="#FF637687" BorderThickness="0" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
        </StackPanel>
        <Button x:Name="Button_Add" Content="Ajouter" Margin="667,400,42,30" Background="#FF637687" BorderThickness="0" Foreground="White" Click="Button_Add_Click"/>
        <Button x:Name="Button_Cancel" Content="Annuler" HorizontalAlignment="Left" Margin="36,400,0,30" Width="91" Background="#FF637687" BorderThickness="0" Foreground="White" Click="Button_Cancel_Click"/>

    </Grid>
</UserControl>
