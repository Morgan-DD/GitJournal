<UserControl x:Class="GitJournal.UserControl_TotalBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GitJournal"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border BorderBrush="Black" BorderThickness="0,2,0,0">
        <Grid Background="#637687">
            <Label x:Name="Label_Title" Content="Grand Total" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="14" VerticalContentAlignment="Center"/>
            <Label x:Name="Label_TotalHours" Content="Label" HorizontalAlignment="Right" VerticalAlignment="Top" Foreground="White" FontSize="14" VerticalContentAlignment="Center"/>

        </Grid>
    </Border>
</UserControl>
